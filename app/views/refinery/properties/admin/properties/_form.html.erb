<%= form_for [refinery, :properties_admin, @property] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @property,
              :include_object_name => true %>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:address, :description],
                :object => "properties/property" -%>
  </div>

  <div class='field'>
    <%= f.label :rent_amount -%>
    <%= f.number_field :rent_amount -%>
  </div>

  <div class='field'>
    <%= f.label :region -%>
    <%= f.text_field :region -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :suburb -%>
    <%= f.text_field :suburb -%>
  </div>

  <div class='field'>
    <%= f.label :bedrooms -%>
    <%= f.number_field :bedrooms -%>
  </div>

  <div class='field'>
    <%= f.label :available_from -%>
    <%= f.text_field :available_from -%>
  </div>

  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @property[:active] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.properties.admin.properties.property'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @property.region) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
